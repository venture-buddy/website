<!doctype html>
<html lang="ja">

<% const title="WeRefer" %>
  <% const tagline="「共感」の力で成長を加速する" %>
    <% const url="https://we-refer.com" %>
      <% const description="ベンチャーがもっと成長しやすい未来をテクノロジーで実現します。私たちはベンチャーや海外新規参入企業がより成長しやすい環境を整えることで日本の国際競争力の向上に寄与します。" %>
        <% const image=url+"/images/card-image-ja.jpg" %>
          <% const twitter="@twitter_account" %>

            <head>
              <!-- Required meta tags -->
              <meta charset="utf-8">
              <meta name="viewport" content="width=device-width, initial-scale=1">
              <meta name="robots" content="index, follow">

              <!-- CSS -->
              <link href="../css/style.min.css" rel="stylesheet">

              <!-- Web Fonts -->
              <link rel="preconnect" href="https://fonts.googleapis.com">
              <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
              <link
                href="https://fonts.googleapis.com/css2?family=Barlow:wght@500&family=Poppins:wght@300;400;500;600;700&display=swap"
                class="webfont">

              <title>
                <%= title %>（ウィーリファー） - <%= tagline %>
              </title>
              <meta name="description" content="<%= description %>">
              <!-- <link rel="canonical" href="<%= url %>"> -->

              <!-- Open Graph Tags -->
              <meta property="og:title" content="<%= title %>（ウィーリファー） - <%= tagline %>" />
              <meta property="og:type" content="website" />
              <meta property="og:image" content="<%= image %>" />
              <meta property="og:description" content="<%= description %>" />
              <meta property="og:locale" content="en-US" />
              <meta property="og:site_name" content="<%= title %>（ウィーリファー）" />
              <meta property="og:url" content="<%= url %>" />

              <!-- Twitter Cards -->
              <meta name="twitter:card" content="summary_large_image">
              <meta name="twitter:site" content="<%= twitter %>">
              <meta name="twitter:title" content="<%= title %>（ウィーリファー） - <%= tagline %>">
              <meta name="twitter:description" content="<%= description %>">
              <meta name="twitter:image" content="<%= image %>">
              <meta property="twitter:url" content="<%= url %>" />
              <meta name="twitter:creator" content="<%= twitter %>">

              <!-- Favicon -->
              <link rel="apple-touch-icon" sizes="180x180" href="../images/favicon/apple-touch-icon.png">
              <link rel="icon" type="image/png" sizes="32x32" href="../images/favicon/favicon-32x32.png">
              <link rel="icon" type="image/png" sizes="16x16" href="../images/favicon/favicon-16x16.png">
              <link rel="manifest" href="../images/favicon/site.webmanifest">
              <link rel="mask-icon" href="../images/favicon/safari-pinned-tab.svg" color="#353bc9">
              <meta name="msapplication-TileColor" content="#ffffff">
              <meta name="theme-color" content="#ffffff">

              <!-- Global site tag (gtag.js) - Google Analytics -->
              <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q5TVEKS315"></script>
              <script>
                window.dataLayer = window.dataLayer || [];
                function gtag() { dataLayer.push(arguments); }
                gtag('js', new Date());

                gtag('config', 'G-Q5TVEKS315');
              </script>

              <!-- Language -->
              <link rel="alternate" href="https://we-refer.com/ja/" hreflang="ja">
              <link rel="alternate" href="https://we-refer.com/" hreflang="en">
            </head>

            <body class="ja">

              <%- include('../_svg-defs'); %>

                <div class="hero-bg">

                  <header class="page-header w-100">
                    <div class="page-header__inner container-xxl d-flex align-items-center justify-content-between">

                      <a class="header-logo fw-600" href="#">
                        <%= title %><span class="visually-hidden">（ウィーリファー）</span>
                      </a>

                      <input type="checkbox" class="navTriggerInput" id="navTrigger">
                      <label for="navTrigger" class="navTriggerToggle">
                        <div class="spinner diagonal part-1"></div>
                        <div class="spinner horizontal"></div>
                        <div class="spinner diagonal part-2"></div>
                      </label>

                      <nav class="header-nav">
                        <div class="d-lg-flex align-items-center text-center">
                          <ul class="d-lg-flex list-unstyled p-0 m-0">
                            <li>
                              <a href="#vision" class="header-nav-item">ビジョン</a>
                            </li>
                            <li>
                              <a href="#services" class="header-nav-item">サービス</a>
                            </li>
                            <li>
                              <a href="#member" class="header-nav-item">メンバー</a>
                            </li>
                            <li>
                              <a href="#core-values" class="header-nav-item">コアバリュー</a>
                            </li>
                            <li>
                              <a href="#company" class="header-nav-item">会社概要</a>
                            </li>
                            <li>
                              <a href="#contact" class="header-nav-item">お問い合わせ</a>
                            </li>
                          </ul>
                        </div>
                      </nav>
                    </div>
                  </header>

                  <section id="hero" class="d-flex w-100 align-items-center">
                    <div class="container-xxl">

                      <div class="text-sm-center">
                        <div class="btn-group mb-3">
                          <a href="/" class="btn btn-outline-primary btn-sm btn-language">
                            English
                          </a>
                          <a href="ja/" class="btn btn-primary btn-sm btn-language" aria-current="page">
                            日本語
                          </a>
                        </div>
                        <h1 class="text-white mb-4 mb-sm-5">
                          「共感」の力で成長を加速する
                        </h1>
                        <p class="text-white">良いビジネスを、より早く、より最適な場所へ</p>
                      </div>
                    </div>

                  </section>

                </div><!-- .hero-bg -->


                <section id="introduction">
                  <div class="container-xxl text-sm-center">
                    <h2 class="mb-4">ベンチャーがもっと成長しやすい未来を<br class="d-none d-lg-block">テクノロジーで実現します</h2>
                    <p>私たちはベンチャーや海外新規参入企業がより成長しやすい環境を整えることで<br class="d-none d-lg-block">日本の国際競争力の向上に寄与します</p>
                  </div>
                </section>

                <section id="vision">
                  <div class="container-xl d-lg-flex justify-content-between">
                    <div class="vision-title">
                      <h2 class="mb-4 text-center text-lg-start">Vision</h2>
                      <h3 class="text-primary ms-sm-2">東京に次の<br class="d-none d-lg-block">シリコンバレーを<br
                          class="d-none d-lg-block">誕生させる</h3>
                    </div>
                    <div class="vision-text pt-2 pt-sm-4">
                      <p>『日本は世界で最も進んだイノベーションのエコシステムを有しているが、同様に強固で有能なスタートアップのエコシステムと対になっていない。』<br>
                        世界銀行による2020年の日本のスタートアップ・エコシステムの調査より</p>
                      <p>
                        スタートアップを支援するインフラが整っていないために、日本市場への参入を躊躇する企業が世界でも相当数存在しています。私たちのミッションは、日本という閉鎖的なコミュニティを、真の意味で国境を越えたエコシステムに変えることです。
                      </p>
                      <p>複数のグローバルなステークホルダーやブランドと連携し、日本のエコシステムに良い刺激を与え、次に来るイノベーションの実現に貢献していきます。</p>
                    </div>
                  </div>
                </section>

                <section id="services">
                  <div class="container-xl d-lg-flex justify-content-between">
                    <h2 class="text-center text-lg-start mb-5">Service</h2>
                    <ol class="list-unstyled m-0 p-0">
                      <li class="d-flex mb-4 mb-sm-5">
                        <span class="text-black fw-600 ms-4 d-block">
                          <small class="fw-300 d-block">日本でビジネス展開するための</small>
                          Webプラットフォーム
                        </span>
                      </li>
                      <li class="d-flex">
                        <span class="text-black fw-600 ms-4 d-block">イベント関連事業</span>
                      </li>
                    </ol>
                  </div>
                </section>

                <section id="member">
                  <div class="container-lg">
                    <h2 class="text-center mb-5">Member</h2>
                    <ul class="list-unstyled p-0 m-0 member-list">

                      <% var memberData=memberDataJaJson %>
                        <% memberData.forEach(function (value) { %>
                          <li class="d-sm-flex align-items-center mb-5">
                            <div class="lh-0 me-sm-5 text-center mb-4 mb-sm-0">
                              <picture>
                                <source srcset="../images/member-<%= value.slug %>.webp" type="image/webp">
                                <source srcset="../images/member-<%= value.slug %>.jpg" type="image/jpeg">
                                <img src="../images/member-<%= value.slug %>.jpg" loading="lazy" width="256"
                                  height="256" alt="<%= value.name %>の写真" title="<%= value.name %>の写真">
                              </picture>
                            </div>
                            <div class="flex-1">
                              <h3 class="mb-4">
                                <%= value.name %> <small class="d-block mt-1 fw-400">
                                    <%= value.title %>
                                  </small>
                              </h3>
                              <p>
                                <%= value.bio %>
                              </p>
                            </div>
                          </li>
                          <% }); %>

                    </ul>
                  </div>
                </section>

                <section id="core-values">
                  <div class="container-xl">
                    <h2 class="text-center mb-5">Core Values</h2>
                    <ul class="list-unstyled p-0 m-0 core-values-list">

                      <% var valData=valDataJson %>
                        <% valData.forEach(function (value) { %>
                          <li class="px-4 py-5">
                            <div class="lh-0 text-center">
                              <picture>
                                <source srcset="../images/val-<%= value.slug %>.webp" type="image/webp">
                                <source srcset="../images/val-<%= value.slug %>.png" type="image/png">
                                <img src="../images/val-<%= value.slug %>.png" loading="lazy" width="80" height="80"
                                  alt="<%= value.title %>のアイコン" title="<%= value.title %>のアイコン">
                              </picture>
                            </div>
                            <h3 class="text-center text-primary mt-4 mb-3">
                              <%= value.title %>
                            </h3>
                            <p>
                              <%= value.description %>
                            </p>
                          </li>
                          <% }); %>

                    </ul>
                  </div>
                </section>

                <section id="company">
                  <div class="container-xl d-lg-flex justify-content-between">
                    <h2 class="text-center text-lg-start mb-5">Company</h2>
                    <table class="table ms-lg-5 border-top">
                      <tr>
                        <th>会社名</th>
                        <td>ReachNext Tokyo株式会社</td>
                      </tr>
                      <tr>
                        <th>設立</th>
                        <td>2022年</td>
                      </tr>
                      <tr>
                        <th>事業内容</th>
                        <td>
                          <ul class="m-0">
                            <li>WeRefer - 日本でビジネス展開するためのWebプラットフォーム</li>
                            <li>イベント関連事業</li>
                          </ul>
                        </td>
                      </tr>
                      <tr>
                        <th class="text-nowrap">代表取締役</th>
                        <td>森本 到史</td>
                      </tr>
                      <tr>
                        <th>所在地</th>
                        <td>東京</td>
                      </tr>
                    </table>
                  </div>
                </section>

                <section id="contact" class="d-flex justify-content-center container">
                  <div class="contact-bg">
                    <div class="contact-inner text-center">
                      <h2>Contact Us</h2>
                      <p class="text-white my-4">下記のメールアドレスから<br>お気軽にお問い合わせください</p>
                      <div class="contact-email-address pb-2">
                        <img src="../images/email-address.svg" loading="lazy" width="474" height="36"
                          alt="Email Address" title="Email Address">
                      </div>
                    </div>
                  </div>
                </section>

                <footer class="text-center page-footer pb-5">
                  © 2022 <%= title %>. All Rights Reserved.
                </footer>

                <script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"
                  integrity="sha512-wT7uPE7tOP6w4o28u1DN775jYjHQApdBnib5Pho4RB0Pgd9y7eSkAV1BTqQydupYDB9GBhTcQQzyNMPMV3cAew=="
                  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                <script>
                  // Language
                  document.addEventListener('click', function (event) {
                    if (!event.target.matches('.btn-language')) return;
                    Cookies.set('languageSwitch', 'true', { path: '/' }, { expires: 1 })
                  }, false);
                  // console.log(Cookies.get('languageSwitch'));

                  const lang = window.navigator.languages || window.navigator.language || window.navigator.userLanguage || window.navigator.browserLanguage;
                  if ((lang[0] !== 'ja' && lang[0] !== 'ja-JP') && Cookies.get('languageSwitch') === undefined) {
                    location.href = '/';
                  }
                  // console.log(lang);
                </script>

                <script>
                  // WebFont lazy load
                  const webfonts = document.querySelectorAll(".webfont");
                  webfonts.forEach(function (webfont) {
                    webfont.rel = "stylesheet";
                  });
                </script>

                <script>
                  // Sticky header background
                  window.addEventListener("scroll", function () {
                    const header = document.querySelector(".page-header");
                    header.classList.toggle("scroll", window.scrollY > 100);
                  });
                </script>

                <script>
                  const navTrigger = document.querySelector("#navTrigger");
                  const navItems = document.querySelectorAll(".header-nav-item")

                  for (const item of navItems) {
                    item.addEventListener('click', function (event) {
                      console.log('click');
                      if (navTrigger.checked == true) {
                        navTrigger.checked = false;
                      }
                    })
                  }
                </script>

                <script src="../js/modernizr-webp.js"></script>
            </body>

</html>
